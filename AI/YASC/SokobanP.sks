[Skin]
=======

=======
Player
=======

[Graphics - Board - Figures - Player - Image]
if {p}
FileName={Filename}
Player-u={Tile {Add 2 {b} {p}} 0}
FileName={Filename}
Player-l={Tile {Add 0 {b} {p}} 0}
FileName={Filename}
Player-d={Tile {Add 3 {b} {p}} 0}
FileName={Filename}
Player-r={Tile {Add 1 {b} {p}} 0}
else
FileName={Filename}
Section={Tile {Add 0 {b} {q}} 0}
endif
perform Background_Color

======================
Player on goal square
======================

[Graphics - Board - Figures - Player on goal square]
Use "Player" image for move animation=Yes

[Graphics - Board - Figures - Player on goal square - Image]
if {p}
FileName={Filename}
Player-u={Tile {Add 2 {b} {p}} 0}
FileName={Filename}
Player-l={Tile {Add 0 {b} {p}} 0}
FileName={Filename}
Player-d={Tile {Add 3 {b} {p}} 0}
FileName={Filename}
Player-r={Tile {Add 1 {b} {p}} 0}
else
FileName={Filename}
Section={Tile {Add 0 {b} {q}} 0}
endif
perform Background_Color

====
Box
====

[Graphics - Board - Figures - Box - Image]
FileName={Filename}
Section={Tile 1,0}
perform Background_Color

===================
Box on goal square
===================

[Graphics - Board - Figures - Box on goal square]
Use "Box" image for move animation=Yes

[Graphics - Board - Figures - Box on goal square - Image]
FileName={Filename}
if {b} = 0
Section={Tile 1,0}
else
Section={Tile 4,0}
endif
perform Background_Color

=====
Goal
=====

[Graphics - Board - Figures - Goal square - Image]
FileName={Filename}
Section={Tile 3,0}
perform No_Background_Color

=====
Wall
=====

[Graphics - Board - Figures - Wall - Image]
if {w}
FileName={Filename}
wall={Tile {Add 1 {b} {w}} 0}
FileName={Filename}
wall-u-r-d-l={Tile {Add 2 {b} {w}} 0}
FileName={Filename}
wall-l-r={Tile {Add 3 {b} {w}} 0}
FileName={Filename}
wall-u-d={Tile {Add 4 {b}{w}} 0}
FileName={Filename}
wall-cap={Tile {Add 0 {b} {w}} 0}
perform No_Background_Color
[Graphics - Board - Figures - Wall]
Type (appropriate images required)=Seamless walls - with wall cap
else
FileName={Filename}
Section={Tile {Add 0 {b} {x}} 0}
perform No_Background_Color
endif

======
Floor
======

[Graphics - Board - Figures - Floor - Image]
FileName={Filename}
Section={Tile 0,0}
perform No_Background_Color

===========
Background
===========

if {Self.Sokoban YASC Skin Script.UseBackground}
[Graphics - Background - Image]
FileName={FileName}
Section={Tile {Add 4 {b}} 0}
View=Tile
endif

end -- Skin

