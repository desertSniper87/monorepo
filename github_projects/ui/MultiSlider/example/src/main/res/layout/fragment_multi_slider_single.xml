<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  tools:context="io.apptik.widget.example.multislider.MultiSliderFragmentSingle"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic SeekBar: "/>
                <TextView
                    android:id="@+id/minValue1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="min"
                />

            </LinearLayout>

            <io.apptik.widget.MultiSlider
                android:id="@+id/multiSlider1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:thumbNumber="1"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custom Colors: "/>
                <TextView
                    android:id="@+id/minValue2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="min"
                />

            </LinearLayout>

            <io.apptik.widget.MultiSlider
                android:id="@+id/multiSlider2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:thumb="@drawable/example_scrubber_control_selector_holo_light"
                android:track="@drawable/example_scrubber_secondary_holo"
                app:range="@drawable/example_scrubber_primary_holo"
                app:thumbNumber="1"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With Step 5: "/>
                <TextView
                    android:id="@+id/minValue3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="min"
                />

            </LinearLayout>

            <io.apptik.widget.MultiSlider
                android:id="@+id/multiSlider3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:scaleStep="5"
                app:thumbNumber="1"

            />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inverted Selection: "/>
                <TextView
                    android:id="@+id/minValue4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="min"
                />

            </LinearLayout>

            <io.apptik.widget.MultiSlider
                android:id="@+id/multiSlider4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:range1="@drawable/example_scrubber_track_holo_light"
                app:thumbNumber="2"


            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With Custom Range: "/>
                <TextView
                    android:id="@+id/minValue5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="min"
                />

            </LinearLayout>

            <io.apptik.widget.MultiSlider
                android:id="@+id/multiSlider5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:scaleMax="300"
                app:scaleMin="-200"
                app:thumbNumber="1"

            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tinted Seekbar: "/>
                <TextView
                    android:id="@+id/minValue6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="min"
                />

            </LinearLayout>

            <io.apptik.widget.MultiSlider
                android:id="@+id/multiSlider6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:track="@drawable/example_scrubber_secondary_holo"
                app:rangeColor="@color/holo_green_light"
                app:thumbColor="@color/holo_blue_bright"
                app:thumbNumber="1"
                app:trackColor="@color/holo_purple"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Old HoloStyle Seekbar: "/>
                <TextView
                    android:id="@+id/minValue7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="min"
                />

            </LinearLayout>

            <io.apptik.widget.MultiSlider
                android:id="@+id/multiSlider7"
                style="@style/sliderHoloStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:thumbNumber="1"
            />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SeekBar from Android"/>

            </LinearLayout>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            />


        </LinearLayout>
    </LinearLayout>
</ScrollView>